    "definitions": {
        "models.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {},
                "message": {
                    "type": "string",
                    "example": "error message"
                }
            }
        },
        "models.LoginRequest": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string",
                    "example": "12345678"
                },
                "phone": {
                    "type": "string",
                    "example": "+992931753756"
                }
            }
        },
        "models.MessageResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "registration code sent"
                }
            }
        },
        "models.PayRequest": {
            "type": "object",
            "properties": {
                "account": {
                    "type": "string"
                },
                "amount": {
                    "type": "number",
                    "example": 100
                },
                "service_type": {
                    "type": "string",
                    "example": "internet"
                }
            }
        },
        "models.RegisterResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "user registered"
                },
                "user_id": {
                    "type": "integer",
                    "example": 6
                }
            }
        },
        "models.Services": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "example": "mobile services"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "mobile"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "models.SetPasswordRequest": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        },
        "models.SignUpRequest": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "опционально",
                    "type": "string",
                    "example": "12345678"
                },
                "phone": {
                    "type": "string",
                    "example": "+992931062345"
                }
            }
        },
        "models.TransactionHistory": {
            "type": "object",
            "properties": {
                "account_to": {
                    "type": "integer",
                    "example": 3
                },
                "amount": {
                    "type": "number",
                    "example": 100
                },
                "created_at": {
                    "type": "string"
                },
                "to_phone": {
                    "type": "string",
                    "example": "+992931753756"
                },
                "type": {
                    "type": "string",
                    "example": "transfer"
                }
            }
        },
        "models.TransferRequest": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number",
                    "example": 100.34
                },
                "to_phone": {
                    "type": "string",
                    "example": "+992931753756"
                }
            }
        },
        "models.UserBalanceResponse": {
            "type": "object",
            "properties": {
                "balance": {
                    "type": "number",
                    "example": 100
                },
                "bonus_balance": {
                    "type": "number",
                    "example": 100
                }
            }
        },
        "models.UserProfileResponse": {
            "type": "object",
            "properties": {
                "first_name": {
                    "type": "string"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "is_verified": {
                    "type": "boolean",
                    "example": true
                },
                "last_name": {
                    "type": "string"
                },
                "middle_name": {
                    "type": "string"
                },
                "phone": {
                    "type": "string",
                    "example": "+992931753756"
                }
            }
        },
        "models.VerifyIdentityRequest": {
            "type": "object",
            "properties": {
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "middle_name": {
                    "type": "string"
                },
                "passport_number": {
                    "type": "string"
                },
                "user_id": {
                    "type": "integer"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}